p_menu+=("Enable sslstrip on dsniff usage");
Enable_sslstrip_on_dsniff_usage(){ dsniff_helpers+="sslstrip"; }
sslstrip(){
    execute "SSlstripping" sslstrip -a -k -f -l 8080 &
}
